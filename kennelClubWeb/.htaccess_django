RewriteEngine On

# Configuraci칩n para Django en cPanel - Dejar que Django maneje los est치ticos

# Permitir acceso directo a archivos est치ticos
<FilesMatch "\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot|pdf|webp|html|txt)$">
    Allow from all
    Require all granted
</FilesMatch>

# Denegar archivos Python
<Files "*.py">
    Deny from all
</Files>

# Todo va a Django - incluyendo archivos est치ticos
RewriteCond %{REQUEST_FILENAME} !-f
