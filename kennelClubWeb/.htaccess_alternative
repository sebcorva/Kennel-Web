RewriteEngine On

# Configuraci칩n alternativa para cPanel

# Servir archivos est치ticos directamente desde staticfiles
RewriteCond %{REQUEST_URI} ^/static/(.*)$
RewriteRule ^static/(.*)$ staticfiles/$1 [L]

# Servir archivos de media directamente
RewriteCond %{REQUEST_URI} ^/media/(.*)$
RewriteRule ^media/(.*)$ media/$1 [L]

# Todo lo dem치s a Django
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ passenger_wsgi.py/$1 [QSA,L]

# Permitir todos los archivos est치ticos
<FilesMatch "\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot|pdf|webp|html)$">
    Allow from all
</FilesMatch>

# Denegar archivos Python
<Files "*.py">
    Deny from all
</Files> 